<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Hakkinda">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ust_menu_toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/toolbar_ust_menu"
        app:title="Flipboard" />


    <ImageView
        android:id="@+id/uygulamaicon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="56dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ust_menu_toolbar"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/uygulamaadı"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="40dp"
        android:text="FlipboardTR"
        android:textColor="@color/mycolor"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uygulamaicon" />

    <TextView
        android:id="@+id/uygulamatanim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="105dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="105dp"
        android:text="© 2019 FlipboardTR"
        android:textColor="@color/mycolordark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uygulamaicon" />

    <TextView
        android:id="@+id/bilgi_tolu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="Tolunay Eren İlgi"
        android:textColor="@color/mycolordark"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/developer_tv"
        app:layout_constraintTop_toBottomOf="@+id/bilgi_emre" />

    <TextView
        android:id="@+id/bilgi_emre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="80dp"
        android:text="Emre İçöz"
        android:textColor="@color/mycolordark"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/developer_tv3"
        app:layout_constraintTop_toBottomOf="@+id/uygulamaadı" />

    <TextView
        android:id="@+id/bilgi_cumali"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:text="Cumali Kadir"
        android:textColor="@color/mycolordark"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/developer_tv2"
        app:layout_constraintTop_toBottomOf="@+id/bilgi_tolu" />

    <TextView
        android:id="@+id/developer_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="20dp"
        android:text="@string/title_cahil"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/developer_tv" />

    <TextView
        android:id="@+id/developer_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="@string/title_developer"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uygulamatanim" />

    <TextView
        android:id="@+id/developer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="@string/title_developer"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/developer_tv3" />


</androidx.constraintlayout.widget.ConstraintLayout>
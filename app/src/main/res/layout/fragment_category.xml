<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@drawable/arkaplan33"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="747dp"
        android:paddingTop="15dp"
        app:columnCount="2"
        app:rowCount="2">

        <FrameLayout
            android:id="@+id/is_category_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/is_category_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="2dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/iss" />

            <TextView
                android:id="@+id/is_category_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/title_is"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/eglence_category_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/eglence_category_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="2dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/eglencee" />

            <TextView
                android:id="@+id/eglence_category_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/title_eglence"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

        </FrameLayout>


        <FrameLayout
            android:id="@+id/saglik_category_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/saglik_category_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="2dp"
                android:scaleType="centerCrop"
                app:layout_column="7"
                app:layout_row="0"
                app:srcCompat="@drawable/saglikk" />

            <TextView
                android:id="@+id/saglik_category_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/title_saglik"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />


        </FrameLayout>

        <FrameLayout
            android:id="@+id/bilim_category_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/bilim_category_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:adjustViewBounds="false"
                android:cropToPadding="false"
                android:padding="2dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/bilimm" />

            <TextView
                android:id="@+id/bilim_category_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/title_bilim"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/spor_category_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/spor_category_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="2dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/sporr" />

            <TextView
                android:id="@+id/spor_category_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/title_spor"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/teknoloji_category_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <ImageView
                android:id="@+id/teknoloji_category_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="2dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/teknolojii" />

            <TextView
                android:id="@+id/teknoloji_category_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/title_teknoloji"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

        </FrameLayout>


    </androidx.gridlayout.widget.GridLayout>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/profile_imageView"
        android:layout_width="145dp"
        android:layout_height="145dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:civ_border_color_direction="top_to_bottom"
        app:civ_border_color_end="#52de97"
        app:civ_border_color_start="#3f51b5"
        app:civ_border_width="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        tools:ignore="MissingConstraints">

    </com.mikhaellopez.circularimageview.CircularImageView>


    <TextView
        android:id="@+id/username_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:text="@string/title_profilename"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_imageView" />

    <FrameLayout
        android:id="@+id/frame_layout_login"
        android:layout_width="332dp"
        android:layout_height="423dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_textView">


        <EditText
            android:id="@+id/username_editText"
            android:layout_width="133dp"
            android:layout_height="61dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bordertext"
            android:ems="10"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="155dp"
            android:layout_marginTop="28dp"
            android:text="@"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/email_text"
            android:layout_width="133dp"
            android:layout_height="61dp"
            android:layout_marginStart="180dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bordertext"
            android:ems="10"
            android:inputType="text"
            android:textAlignment="center"
            android:textSize="20sp" />


        <EditText
            android:id="@+id/password_text"
            android:layout_width="291dp"
            android:layout_height="61dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/bordertext"
            android:ems="10"
            android:inputType="textPassword"
            android:textAlignment="center"
            android:textSize="20sp" />


        <Button
            android:id="@+id/button_kayit"
            android:layout_width="159dp"
            android:layout_height="61dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="272dp"
            android:background="@drawable/butongiris"
            android:enabled="false"
            android:text="@string/title_kayitol"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button_giris"
            android:layout_width="159dp"
            android:layout_height="61dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="190dp"
            android:background="@drawable/butongiris"
            android:enabled="false"
            android:text="@string/title_girisyap"
            android:textColor="#FFFFFF" />


    </FrameLayout>

    <Button
        android:id="@+id/button_cikis"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_logout"
        app:layout_constraintStart_toEndOf="@+id/profile_imageView"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>